<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.ac.uim.kamusmadura">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activitiy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activitiy.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitiy.AboutActivity" />
        <activity
            android:name=".activitiy.BelajarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activitiy.KamusActivity" />
        <activity
            android:name=".activitiy.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activitiy.PlayActivity"></activity>
    </application>

</manifest>